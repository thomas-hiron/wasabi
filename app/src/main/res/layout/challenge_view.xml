<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:wasabi="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             android:orientation="vertical"><!-- Vue de l'indice -->

    <!-- Le formulaire -->
    <LinearLayout
        android:id="@+id/challenge_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <project.gobelins.wasabi.views.TextViewQuicksand
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="@string/revelation_rang"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/drop_shadow"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/bravo"
            android:src="@drawable/so"/>

        <project.gobelins.wasabi.views.TextViewQuicksand
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guess_identity"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"/>

        <project.gobelins.wasabi.views.EditTextQuicksand
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="60dp"
            android:background="@color/active_hide"
            android:hint="@string/full_name"
            android:maxLength="25"
            android:textColor="@color/active_show"
            android:textColorHint="@color/active_show"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="45dp"
            android:layout_marginEnd="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginStart="60dp"
            android:background="@color/active_show"/>

        <project.gobelins.wasabi.views.ButtonQuicksand
            android:id="@+id/validate_full_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginStart="60dp"
            android:background="@color/active_show"
            android:text="@string/validate"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <project.gobelins.wasabi.views.ButtonQuicksand
            android:id="@+id/no_idea_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:background="@color/green_button"
            android:text="@string/no_idea"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>

    <!-- Le dÃ©compte -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <project.gobelins.wasabi.views.TextViewQuicksand
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="@string/challenge"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/challenge_infos"
                android:src="@drawable/challenge_header"/>

            <project.gobelins.wasabi.views.TextViewQuicksand
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="@string/challenge_infos"
                android:textColor="@color/white"
                android:textSize="22sp"/>

        </FrameLayout>

        <project.gobelins.wasabi.views.TextViewQuicksand
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/address_lafayette"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:background="@color/green_button"
            android:text="@string/see_map"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <project.gobelins.wasabi.views.TextViewQuicksand
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="@string/quick"
            android:textColor="@color/active_show"
            android:textSize="18sp"/>

        <project.gobelins.wasabi.views.TextViewQuicksand
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/time_remaining"
            android:textColor="@color/active_show"
            android:textSize="18sp"/>

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="invisible">

            <project.gobelins.wasabi.views.DottedCircleView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

            <project.gobelins.wasabi.views.RoundGradientChallengeView
                android:id="@+id/rounded_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <project.gobelins.wasabi.views.TextViewQuicksand
                        android:id="@+id/challenge_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/active_show"
                        android:textSize="85sp"
                        wasabi:font_weight="light"/>

                    <project.gobelins.wasabi.views.TextViewQuicksand
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="7dp"
                        android:text="@string/minutes"
                        android:textColor="@color/active_show"
                        android:textSize="24sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <project.gobelins.wasabi.views.TextViewQuicksand
                        android:id="@+id/challenge_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/active_show"
                        android:textSize="40sp"
                        wasabi:font_weight="light"/>

                    <project.gobelins.wasabi.views.TextViewQuicksand
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="7dp"
                        android:text="@string/seconds"
                        android:textColor="@color/active_show"
                        android:textSize="24sp"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
