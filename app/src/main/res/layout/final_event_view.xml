<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             android:orientation="vertical">

    <LinearLayout
        android:id="@+id/final_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <project.gobelins.wasabi.views.TextViewQuicksand
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="@string/experience_ending"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/drop_shadow"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/revelation"
                android:src="@drawable/revelation"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp">

            <project.gobelins.wasabi.views.TextViewQuicksand
                android:id="@+id/in_7_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/in_7_days"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <project.gobelins.wasabi.views.TextViewQuicksand
                android:id="@+id/accomplice_meeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/accomplice_meeting"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:visibility="invisible"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_blue"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp">

                <project.gobelins.wasabi.views.TextViewQuicksand
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="@string/get_ready"
                    android:textColor="@color/black"
                    android:textSize="17sp"/>

                <project.gobelins.wasabi.views.TextViewQuicksand
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="@string/date_final_event"
                    android:textAllCaps="true"
                    android:textColor="@color/active_show"
                    android:textSize="25sp"/>

                <project.gobelins.wasabi.views.TextViewQuicksand
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="@string/dress_code"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:font_style="italic"/>

                <project.gobelins.wasabi.views.TextViewQuicksand
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/address_communicated"
                    android:textColor="@color/black"
                    android:textSize="17sp"/>

                <project.gobelins.wasabi.views.TextViewQuicksand
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="@string/can_go_with_someone"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:font_style="italic"/>

            </LinearLayout>

            <project.gobelins.wasabi.views.TextViewQuicksand
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:background="@color/white"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/consignes"
                android:textColor="@color/active_show"
                android:textSize="20sp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/accept_final_event"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/accept"
                    android:src="@drawable/accept"/>

                <project.gobelins.wasabi.views.TextViewQuicksand
                    android:id="@+id/accept_final_event_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="@string/accept_invitation"
                    android:textColor="@color/active_show"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/decline_final_event"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/decline"
                    android:src="@drawable/decline"/>

                <project.gobelins.wasabi.views.TextViewQuicksand
                    android:id="@+id/decline_final_event_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="@string/chose_other_date"
                    android:textColor="@color/green_button"
                    android:textSize="17sp"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
