<FrameLayout
    android:id="@+id/app_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home">

    <ImageView
        android:id="@+id/open_notification"
        android:layout_width="@dimen/action_buttons"
        android:layout_height="@dimen/action_buttons"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/notif"
        android:src="@drawable/open_notification"/>

    <ImageView
        android:id="@+id/open_fresco"
        android:layout_width="@dimen/action_buttons"
        android:layout_height="@dimen/action_buttons"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/fresco"
        android:src="@drawable/open_notification"/>

</FrameLayout>