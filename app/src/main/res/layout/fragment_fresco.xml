<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="project.gobelins.wasabi.fragments.FrescoFragment">

    <project.gobelins.wasabi.fresco.drawing.DrawedView
        android:id="@+id/drawed_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <project.gobelins.wasabi.fresco.drawing.DrawView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <project.gobelins.wasabi.fresco.recording.RecordView
        android:id="@+id/record_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:text="@string/record_instructions"/>

        <project.gobelins.wasabi.fresco.views.buttons.StartRecordingButton
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="@drawable/record_button"/>

    </project.gobelins.wasabi.fresco.recording.RecordView>

</FrameLayout>
